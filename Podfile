inhibit_all_warnings!
use_frameworks!

# Pods for DripDrop
def common_pods
    pod 'AMWaveTransition'
    pod 'AHKActionSheet'
    pod 'pop'
    pod 'AMPopTip'
    pod 'UICountingLabel'
    pod 'CVCalendar'
    pod 'BAFluidView'
